INCLUDE "sipo.inc";  --contador mod 10
subdesign contsipofm
(
	clock, sel[1..0], sw1, sw2					: INPUT;
	a[3..0], b[3..0], c[3..0], d[3..0]		: OUTPUT;
)
VARIABLE
	uni, dez, cem, mil	: sipo;
BEGIN
	if sw1 == GND & sw2 == gnd then
		if sel[] == B"10" then   --t√° acrescendo em s3, era pra ser s4   entrando no modo acrescimo e ena age para confirmar que s4 foi apertado
			uni.clock=clock;
			if mil.q[] < 1 & cem.q[] <=7  then				-- caso de load
				IF dez.q[] <= 6 THEN								-- limite inferior
					if uni.q[] <= 4 then
						uni.load_ena=VCC;	
						dez.load_ena=VCC;
						cem.load_ena=VCC;
						mil.load_ena=VCC;
						dez.clock=clock;
						cem.clock=clock;
						mil.clock=clock;
					end if;
				end if;
			elsif mil.q[] >= 1 & cem.q[] >= 0 & dez.q[] >= 8 & uni.q[] >= 1 then -- limite superior
		--		if cem.q[] >= 0 then
		--			if dez.q[] >= 8 & uni.q[] >= 1 then
							uni.load_ena=VCC;	
							dez.load_ena=VCC;
							cem.load_ena=VCC;
							mil.load_ena=VCC;
							dez.clock=clock;
							cem.clock=clock;
							mil.clock=clock;
		--			end if;
		--		end if;

			ELSE									-- caso de contar normal
				dez.clock = uni.maisum;	
				cem.clock = dez.maisum;
				mil.clock = cem.maisum;
				uni.load_ena=GND;
				dez.load_ena=GND;
				cem.load_ena=GND;
				mil.load_ena=GND;
			END IF;
			
			uni.load[]= 5;
			dez.load[]= 7;
			cem.load[]= 8;
			mil.load[]= 0;
		elsif sel[] == B"01" then			--caso descrescente
			uni.clock=clock;
			if mil.q[] < 1 & cem.q[] <=8 & dez.q[] <= 7 & uni.q[] < 5 then				-- caso de load,  limite inferior
						uni.load_ena=VCC;	
						dez.load_ena=VCC;
						cem.load_ena=VCC;
						mil.load_ena=VCC;
						dez.clock=clock;
						cem.clock=clock;
						mil.clock=clock;

			elsif mil.q[] >= 1 & cem.q[] >= 0 & dez.q[] == 8 & uni.q[] >= 1 then
		--		if cem.q[] >= 0 then
		--			if dez.q[] >= 8 & uni.q[] >= 1 then
							uni.load_ena=VCC;	
							dez.load_ena=VCC;
							cem.load_ena=VCC;
							mil.load_ena=VCC;
							dez.clock=clock;
							cem.clock=clock;
							mil.clock=clock;
		--			end if;
		--		end if;

			ELSE	
				dez.clock = uni.maisum;	
				cem.clock = dez.maisum;
				mil.clock = cem.maisum;
				uni.load_ena=GND;
				dez.load_ena=GND;
				cem.load_ena=GND;
				mil.load_ena=GND;
				end if;
				
				uni.load[]= 0;
				dez.load[]= 8;
				cem.load[]= 0;
				mil.load[]= 1;
			
		else
			uni.load_ena=GND;
			dez.load_ena=GND;
			cem.load_ena=GND;
			mil.load_ena=GND;
		end if;
	else 
		uni.load_ena=GND;
		dez.load_ena=GND;
		cem.load_ena=GND;
		mil.load_ena=GND;
	end if;	
		
	
	
	uni.sel[] = sel[];
	dez.sel[] = sel[];
	cem.sel[] = sel[];
	mil.sel[] = sel[];
	
	a[]=uni.q[];
	b[]=dez.q[];
	c[]=cem.q[];
	d[]=mil.q[];
	
END;